<head>
	<style type="text/css">
		.btn{
				 background-color: #555555;; 
			    border: none;
			    color: white;
			    padding: 15px 32px;
			    text-align: center;
			    text-decoration: none;
			    display: inline-block;
			    font-size: 16px;
			    margin-left: 35%;
			}
			.text{
				      font-size: 15px;
				      font-style: italic;
				      font-family: Arial Black;
				      color: #555555;
				      margin-left: 5%;
				      padding-right: 25px;
				      padding-bottom: 10px;
				     }
	</style>
</head>
<body style="background-color: #e7e7e7;">
<div id="stream">
	<%= form_for :message, url: messages_path do |f| %>
	<span style="margin-left: 33.5%;">	<%= f.text_area :body,  id: "url", placeholder: "Message", class: "message_body", cols: '50', rows: '7' %> </span>
		<div id="stream-list" class="follow-list"> 
			<span class="text"> <h3 style="margin-left: 35%;"> Please choose receipients :  </h3></span>
		<table id="stream_item" style="margin-left: 35%;"> 
				<% @recipients.each do |user| %>
					<tr>
						<td class="text">	<%= check_box_tag "message[user_tokens][]", user.id, @message.users.include?(user), id: "user#{user.id}" %> </td>
						<td class="text">	<span class="list-group-item"><%= user.username %></span> </td>
							</tr>
					<br>
				<% end %>
				</table>
		</div>
		<br/> <br/>
		<div id ="stream-footer">
			<%= f.button :submit, class: "btn" %>
		</div>

	<% end %>
</div>
</body>