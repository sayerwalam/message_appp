<head>
  <style type="text/css">
    .form-back{
      margin-left: 42%;
    }
    .field{
        padding-top: 5px;
        padding-bottom: 5px;
    }
    .btn
    {
       background-color: #555555; 
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }
    .text,h2{
      font-size: 15px;
      font-style: italic;
      font-family: Arial Black;
      color: #555555;
      margin-left: 5%;
    }
    .textbox{
          display: inline-block;
          width: 250px;
          height: 40px;
          box-sizing: border-box;
          outline: none;
          border: 1px solid lightgray;
          border-radius: 3px;
          padding: 5px 5px 5px 50px;
          transition: all 0.1s ease-out;
    }
  </style>
</head>
<body style="background-color: #e7e7e7;">
<div class="form-back">
  <div class="form-bigbox">
    <div class="form-box">
      <h2 style="margin-left: 5%;font-size: 25px;">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
           <span class="text"> Enter Username : <br/><br/> </span>
          <%= f.text_field :username, placeholder: "Username", autofocus: true, class: 'textbox' %>
        </div>

        <div class="field">
           <span class="text"> Enter email : <br/><br/> </span>
          <%= f.email_field :email, placeholder: "Email", class: 'textbox' %>
        </div>

        <div class="field">
          <span class="text"> Enter password : <br/><br/> </span>
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: 'textbox' %>
        </div>

        <div class="field">
          <span class="text"> Confirm password : <br/><br/> </span>
          <%= f.password_field :password_confirmation, placeholder: "Password Confirm", autocomplete: "off", class: 'textbox' %>
        </div>
        <br/> <br/>
        <div class="actions" style="margin-left: 7%;">
          <%= f.submit "Sign up", class: 'btn' %>
        </div>
      <% end %>
        
    </div>
  </div>
</div>
</body>
